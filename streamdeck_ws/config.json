{
  "name": "Stream Deck WebSocket (Independent)",
  "version": "0.2.1",
  "slug": "streamdeck_ws",
  "description": "Independent Stream Deck controller via Python + HA WebSocket",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "usb": true,
  "devices": [
    "/dev/input/event0",
    "/dev/input/event1",
    "/dev/input/event2",
    "/dev/input/event3",
    "/dev/input/event4",
    "/dev/input/event5",
    "/dev/hidraw0",
    "/dev/hidraw1",
    "/dev/hidraw2"
  ],
  "options": {
    "ha_ws_url": "ws://supervisor/core/websocket",
    "ha_token": ""
  },
  "schema": {
    "ha_ws_url": "str",
    "ha_token": "password"
  },
  "environment": {
    "HA_WS_URL": "[ha_ws_url]",
    "HA_TOKEN": "[ha_token]"
  }
}
